@model Author

<h1>Add New Author</h1>

<form method="post" asp-action="AddAuthor">

    <label for="Id">Id</label>
    <input type="text" id="Id" name="Id" class="form-control" />


    <label for="Name">Name</label>
    <input type="text" id="Name" name="Name" class="form-control" />

    <label for="Photo">Photo</label>
    <input type="text" id="Photo" name="Photo" class="form-control" />

    <label for="Email">Email</label>
    <input type="text" id="Email" name="Email" class="form-control" />


    <label for="Biography">Biography</label>
    <textarea type="text" id="Name" name="Bio" class="form-control"></textarea>

    <label for="BirthDate">Birth Date</label>
    <input type="text" id="BirthDate" name="dob" class="form-control" />

    <label for="DeathDate">Death Date (ignore for living authors)</label>
    <input type="text" id="DeathDate" name="dod" class="form-control" />

    <input type="submit" value="Add Author" class="btn btn-primary" />


</form>

